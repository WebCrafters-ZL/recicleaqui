<!-- Formulário de cadastro de coleta -->
<div class="container mt-1">
    <div class="card">
        <div class="card-header bg-success text-white">
            <h3 class="card-title text-center">Cadastro de Coleta</h3>
        </div>
        <div class="card-body">
            <form id="registerColetaForm" action="/cliente/cadastrar-coleta" method="post">
                <div class="form-group">
                    <label for="data">Data:</label>
                    <input type="date" id="data" name="data" class="form-control" required>
                </div>

                <div class="form-group">
                    <label for="hora">Hora:</label>
                    <select id="hora" name="hora" class="form-control" required>
                        <!-- Opções de hora podem ser carregadas dinamicamente com JavaScript -->
                    </select>
                </div>

                <div class="form-group">
                    <label for="observacao">Observação:</label>
                    <textarea id="observacao" name="observacao" class="form-control"
                        placeholder="Informe os materiais e a quantidade a serem coletados." required></textarea>
                </div>

                <div class="mt-2">
                    <button type="submit" class="btn btn-success">Agendar coleta</button>
                    <a href="/cliente" class="btn btn-success" role="button">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>