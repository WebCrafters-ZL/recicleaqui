<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-success text-white">
            <h3 class="card-title text-center">Lista de Clientes</h3>
        </div>
        <div class="card-body">
            <div class="table-responsive mt-3">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>CNPJ</th>
                            <th>Razão Social</th>
                            <th>Nome Fantasia</th>
                            <th>E-mail</th>
                            <th>Responsável</th>
                            <th>Ação</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each clients}}
                        <tr>
                            <td>{{this.cnpj}}</td>
                            <td>{{this.razaoSocial}}</td>
                            <td>{{this.nomeFantasia}}</td>
                            <td>{{this.emailUsuario}}</td>
                            <td>{{this.responsavel}}</td>
                            <td>
                                <button type="button" class="btn btn-danger cancel-btn"
                                    data-client-id="{{this.id}}">Deletar</button>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            <a href="/admin" class="btn btn-success mt-3" role="button">Voltar</a>
        </div>
    </div>
</div>