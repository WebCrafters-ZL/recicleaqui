<div class="container-fluid vh-100 d-flex align-items-center justify-content-center">
    <div class="row w-100">
        <!-- Espaço reservado para a exibição das mensagens de alerta, caso existam -->
        {{#if alertMessage}}
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            {{alertMessage}}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        {{/if}}

        <div class="col-md-6 mx-auto">
            <div class="card">
                <div class="card-body">
                    <div id="formulario-login" class="formulario show">
                        <h2 class="text-center">Login</h2>
                        <form id="formLogin" action="/auth/login" method="post" class="mt-4">
                            <div class="mb-3">
                                <label for="email" class="form-label">E-mail</label>
                                <input type="email" class="form-control" id="email" name="email" required>
                            </div>
                            <div class="mb-3">
                                <label for="senha" class="form-label">Senha</label>
                                <input type="password" class="form-control" name="senha" id="senha" required>
                            </div>
                            <div class="mb-3 text-end">
                                <a href="#" class="switch-link" id="redefinir-link">Esqueceu sua senha?</a>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Entrar</button>
                        </form>
                    </div>
                    <div id="formulario-redefinicao" class="formulario d-none">
                        <h2 class="text-center">Redefinir senha</h2>
                        <form id="formRedefinirSenha" action="/auth/redefinir-senha" method="post" class="mt-4">
                            <div class="mb-3">
                                <label for="emailRedefinicao" class="form-label">E-mail</label>
                                <input type="email" class="form-control" id="emailRedefinicao" name="emailRedefinicao"
                                    required>
                            </div>
                            <div class="mb-3 text-end">
                                <a href="#" class="switch-link" id="login-link">Realizar login</a>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Redefinir</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>